pipeline {
    agent { label 'agent-docker' }

    options {
        customWorkspace '/home/cloudshell-user/jenkins-agent/workspace'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/OnsJabbes/devsecops-project.git'
            }
        }
        stage('Build') {
            steps { sh 'echo "Building project..."' }
        }
        stage('Test') {
            steps { sh 'echo "Running tests..."' }
        }
        stage('Docker Build') {
            steps { sh 'echo "Building Docker image..."' }
        }
    }
}
